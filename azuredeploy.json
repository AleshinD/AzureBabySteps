{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS"
      ]
    },
    "commonName": {
      "type": "string",
      "metadata": {
        "description": "Common name for all items in the template"
      }
    },
    "kind": {
      "type": "string"
    },
    "accessTier": {
      "type": "string"
    },
    "supportsHttpsTrafficOnly": {
      "type": "bool"
    },
    "keyVaultName": {
      "type": "string",
      "metadata": {
        "description": "Specifies the name of the key vault."
      }
    },
    "webAppsCount": {
      "type": "int",
      "defaultValue": 2,
      "metadata": {
        "description": "Specifies number of web app nodes in the template"
      }
    }
  },
  "variables": {
    "storageKind": "StorageV2",
    "keyVaultName": "[concat(parameters('commonName'), '_keyVault')]",
    "storageName": "[concat(parameters('commonName'), '_storage')]",
    "webVmName": "[concat(parameters('commonName'), '_webVM')]",
    "niName": "[concat(variables('webVmName'), '_NI')]]"
  },
  "resources": [
    {
      "name": "variables('storageName')",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2018-07-01",
      "location": "[parameters('location')]",
      "properties": {
        "accessTier": "[parameters('accessTier')]",
        "supportsHttpsTrafficOnly": "[parameters('supportsHttpsTrafficOnly')]",
        "accountType": "[parameters('storageAccountType')]"
      },
      "dependsOn": [],
      "sku": {
        "name": "[parameters('storageAccountType')]"
      },
      "kind": "[variables('storageKind')]"
    },
    {
      "apiVersion": "2017-03-30",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('webVmName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('niName'))]"
      ],
      "copy": {
        "name": "vmcopy",
        "count": "[parameters('webAppsCount')]"
      },
      "properties": {}
    },
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('niName')]",
      "location": "[parameters('location')]",
      "dependsOn": [],
      "copy": {
        "name": "nicopy",
        "count": "[parameters('webAppsCount')]"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "name": "[variables('keyVaultName')]",
      "location": "[parameters('location')]",
      "apiVersion": "2018-02-14",
      "tags": {
        "displayName": "KeyVault"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "name": "[concat(variables('keyVaultName'), '_secret')]",
      "apiVersion": "2018-02-14",
      "dependsOn": [
        "[concat('Microsoft.KeyVault/vaults/', variables('keyVaultName'))]"
      ],
      "properties": {}
    }
  ],
  "outputs": {}
}
